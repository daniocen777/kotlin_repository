<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HorocopoApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="android:statusBarColor">@color/secondary</item>
    </style>

    <style name="HorocopoApp" parent="Theme.HorocopoApp" />

    <style name="Title">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/dancing</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/secondary</item>
    </style>

    <!-- Sobreescribir dos valores del parent "Title" -->
    <style name="Body" parent="Title">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>